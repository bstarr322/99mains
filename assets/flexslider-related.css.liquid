/* ====================================================================================================================
 * RESETS
 * ====================================================================================================================*/
.related__product-content .slides,
.related__product-content .slides > li,
.related__product-content .flex-direction-nav {
  margin: 0;
  padding: 0;
  list-style: none;
}

.related__product-content .slides li {
  height: 210px;
  background-color: #fff;
  border-radius: 3px;
  border: 1px solid #E1E3DF;
  border-bottom-color: #CBCCC9;
  margin-right: 5px;
  margin-left: 5px;
}

.related__product-content .slides li:hover {
  border-color: #ddd;
    border-bottom-color: #bbb;
  -moz-box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  text-decoration: none;
}

.related__product-content .slides li .related__grid-image img {
  width: 175px;
  height: 150px;
  object-fit: contain;
  padding: 5px;
}
.related__product-content .flex-pauseplay span {
  text-transform: capitalize;
}
/* ====================================================================================================================
 * DEFAULT THEME
 * ====================================================================================================================*/
.related__product-content .flex-viewport {
  max-height: 2000px;
  -webkit-transition: all 1s ease;
  -moz-transition: all 1s ease;
  -ms-transition: all 1s ease;
  -o-transition: all 1s ease;
  transition: all 1s ease;
}

.related__product-content .flex-direction-nav {
  *height: 0;
}
.related__product-content .flex-direction-nav a {
  text-decoration: none;
  display: block;
  width: 40px;
  height: 40px;
  margin: -20px 0 0;
  position: absolute;
  top: 33%;
  z-index: 10;
  overflow: hidden;
  opacity: 1;
  cursor: pointer;
  color: rgba(0, 0, 0, 0.8);
  text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.3);
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition: all 0.3s ease-in-out;
  -ms-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}
.related__product-content .flex-direction-nav .flex-prev {
  left: 0;
  width: 20px;
  height: 60px;
  background: url({{ 'flexslider-arrow.png' | asset_url }}) bottom left no-repeat;
  text-indent: -9999px;
}
.related__product-content .flex-direction-nav .flex-next {
  right: 0;
  width: 20px;
  height: 60px;
  text-align: right;
  background: url({{ 'flexslider-arrow.png' | asset_url }}) bottom right no-repeat;
  text-indent: 9999px;
}
.flexslider:hover .flex-direction-nav .flex-prev {
  opacity: 0.7;
  left: 10px;
}

.related__product-content .flex-direction-nav .flex-disabled {
  opacity: 0!important;
  filter: alpha(opacity=0);
  cursor: default;
  z-index: -1;
}

.related__product-content .flex-control-nav {
  display: none;
  visibility: hidden;
}